<div class="row mt-4">
  <div class="col-3"></div>
  <div class="col-6">
    <h3>Sign Up</h3>
      <div class="mt-3 container-fluid">
        <%= form_with model: @user, url: sign_up_path do |form| %>
          <%= render partial: "shared/form_errors", locals: { object: form.object } %>
          <div class="row mb-3">
              <%= form.label :first_name, class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= form.text_field :first_name, placeholder: "Your First Name", class: "form-control" %>
            </div>
          </div>
          <div class="row mb-3">
              <%= form.label :last_name, class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= form.text_field :last_name, placeholder: "Your Last Name", class: "form-control" %>
            </div>
          </div>
          <div class="row mb-3">
              <%= form.label :email, class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= form.text_field :email, placeholder: "Your email", class: "form-control" %>
            </div>
          </div>
          <br>
          <div>
            <%= form.submit "Create", class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  <div class="col-3"></div>
</div>