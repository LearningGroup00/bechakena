<div class="row mt-4">
  <div class="col-3"></div>
  <div class="col-6">
    <h3>Sign Up!</h3>
      <div class="mt-3 container-fluid">
        <%= form_with model: @user do |form| %>
          <div class="row mb-3">
            <%= form.label :first_name, class:"col-sm-2 col-form-label"  %><br>
            <div class="col-sm-10">
            <%= form.text_field :first_name, placeholder: "First Name", class: "form-control" %>
            </div>
          </div>
          <div class="row mb-3">
            <%= form.label :last_name, class:"col-sm-2 col-form-label"  %><br>
            <div class="col-sm-10">
            <%= form.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
            </div>
          </div> 
          <div class="row mb-3">
            <%= form.label :email, class:"col-sm-2 col-form-label"  %><br>
            <div class="col-sm-10">
            <%= form.email_field :email, placeholder: "Email Address", class: "form-control" %>
            </div>
          </div> 
         <div class="row mb-3">
            <%= form.label :password, class:"col-sm-2 col-form-label"  %>
            <div class="col-sm-10">
            <%= form.password_field :password, required: true, placeholder: "Password", class: "form-control" %>
            </div>
          </div>
          <div class="row mb-3">
            <%= form.label :password_confirmation, class:"col-sm-2 col-form-label"  %>
            <div class="col-sm-10">
            <%= form.password_field :password_confirmation, required: true, placeholder: "Password", class: "form-control" %>
            </div>
          </div>
          <div class="row mb-3">
            <%= form.label :role, class:"col-sm-2 col-form-label"  %><br>
            <div class="col-sm-10">
            <%= form.text_field :role, placeholder: "Admin/User", class: "form-control" %>
            </div>
          </div> 
          <%= form.submit "Sign Up", class:"btn btn-primary" %>
        <% end %>
  <div class="col-3"></div>
</div>

