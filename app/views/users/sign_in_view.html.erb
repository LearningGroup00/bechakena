<h1 class='text-center'>Sign In</h1>

<div class="row">
  <div class="col-md-4 offset-4">
    <%= form_with(model: @user,url:sign_in_url,  local: true) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'mb-1 form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'mb-1 form-control' %>


      <%= f.submit "Log In" , class: "mt-2 btn btn-primary" %>
      <%= link_to "Sign Up",sign_up_view_path, class: "mt-2 btn btn-secondary" %>
    <% end %>
  </div>
</div>