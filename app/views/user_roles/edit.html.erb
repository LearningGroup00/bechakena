<div class="row mt-3">
  <div class="col">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= @user&.name %> Details</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">
          <%= @user.roles.to_sentence %>
        </h6>
        <p class="card-text"><%= @user.username %></p>
        <div>
        <%= link_to "edit", edit_user_role_path(@user), class:"btn btn-warning" %>
        </div>
      </div>
    </div>
  </div>
</div>