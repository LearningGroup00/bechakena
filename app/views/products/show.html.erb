<h3>Product Details</h3>
<div class="row mt-3">
  <div class="col">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= @product.name %> Details</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">
          <%=
            if @product.category 
              "Sub Category"
             else 
              "Main Category"
            end 
          %>
        </h6>
        <p class="card-text"><%= @product.description %></p>
        <div>
        <%= link_to "Add new", new_product_url, class:"btn btn-primary" %>
        <%= link_to "edit", edit_product_url(@product), class:"btn btn-warning" %>
        <%= button_to "Delete", product_url(@product), method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>