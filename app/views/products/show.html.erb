<div class="row mt-3">
  <div class="col">
    <h3>Product Details</h3>
  </div>
</div>

<div class="row mt-3">
  <div class="col">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Product Name</th>
          <th scope="col">Parent Category</th>
          <th scope="col">Price</th>
          <th scope="col">Product Details</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @product.name %></td>
          <td><%= @product.category&.name %></td>
          <td><%= @product.price %></td>
          <td><%= @product.description %> </td>
          <td><%= button_to "Delete", product_url(@product), method: :delete, class: "btn btn-danger" %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<hr>

<hr>

<%= link_to "Add New Variant", new_product_variant_path(@product)%>
<h3>Variants</h3>
<div class="row mt-3">
  <div class="col">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= @product.name %> Details</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">
          <%=
            if @product.category 
              "Sub Category"
             else 
              "Main Category"
            end 
          %>
        </h6>
        <p class="card-text"><%= @product.description %></p>
        <div>
        <%= link_to "Add new", new_product_url, class:"btn btn-primary" %>
        <%= link_to "edit", edit_product_url(@product), class:"btn btn-warning" %>
        <%= button_to "Delete", product_url(@product), method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>