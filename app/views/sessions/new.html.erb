<div class="row mt-4">
  <div class="col-3"></div>
  <div class="col-6">
    <h3>Log in</h3>
      <div class="mt-3 container-fluid">
        <%= form_with url: login_path, scope: :user do |form| %>
          <div class="row mb-3">
              <%= form.label :email, class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= form.email_field :email, required: true,  placeholder: "Your email", class: "form-control" %>
            </div>
          </div>
          <div class="row mb-3">
              <%= form.label :password, class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= form.text_field :password, required: true,  placeholder: "Your password", class: "form-control" %>
            </div>
          </div>
          <br>
          <div>
            <%= form.submit "Sign In", class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  <div class="col-3"></div>
</div>