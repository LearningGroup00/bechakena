<div class="row">
  <div class="col">
    <h3>All Categories</h3>
  </div>
</div>
<div class="row">
  <div class="col text-end">
    <%# <a href="http://localhost:3000/categories/new">
      <button type="button" class="btn btn-primary">Add New Category</button>
    </a> %>

    <%= link_to new_category_url do %>
      <button type="button" class="btn btn-primary">Add New Category</button>
    <% end %>
  </div>

</div>
<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td> <%= link_to(category.name, category) %> </td>
            <td><%= category.category&.name %></td>
            <td>
              <%= button_to "Delete", category, method: :delete, class: "btn btn-primary" %>
              <%= link_to("Edit", edit_category_path(category), class: "btn btn-primary") %>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
